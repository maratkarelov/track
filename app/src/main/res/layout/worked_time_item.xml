<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:weightSum="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginRight="@dimen/pad_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_start"
                style="@style/st_12_black_main_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/tv_finish"
                style="@style/st_12_black_main_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/tv_worked_out"
                style="@style/st_12_green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                />
        </LinearLayout>

        <View
            android:layout_width="@dimen/pad_1"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pad_10"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_warehouse"
            style="@style/st_12_black_main_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/tv_fio"
            style="@style/st_12_black_main_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>


</LinearLayout>